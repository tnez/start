{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"]
		},
		"check:format": {
			"outputs": []
		},
		"check:lint": {
			"outputs": []
		},
		"check:types": {
			"outputs": []
		},
		"dev": {
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"test": {
			"outputs": []
		},
		"test:watch": {
			"cache": false
		}
	}
}
