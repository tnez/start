{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"]
		},
		"check:format": {
			"outputs": []
		},
		"check:lint": {
			"outputs": []
		},
		"check:types": {
			"outputs": []
		},
		"dev": {
			"cache": false,
			"dependsOn": ["utils#build", "effects#build", "actions#build"]
		},
		"clean": {
			"cache": false
		},
		"test": {
			"outputs": [],
			"dependsOn": ["utils#build", "effects#build", "actions#build"]
		},
		"test:watch": {
			"cache": false,
			"dependsOn": ["utils#build", "effects#build", "actions#build"]
		}
	}
}
