{
  "name": "@project_name/root",
  "description": "This is a monorepo starter",
  "keywords": [
    "javascript",
    "typescript",
    "monorepo",
    "turborepo",
    "nextjs"
  ],
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check:all": "pnpm check:lint && pnpm check:types && pnpm check:format",
    "check:lint": "turbo run check:lint",
    "check:format": "prettier --check \"**/*.{cjs,css,js,jsx,json,md,mdx,mjs,ts,tsx}\"",
    "check:types": "turbo run check:types",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "fix:format": "prettier --write \"**/*.{cjs,css,js,jsx,json,md,mdx,mjs,ts,tsx}\"",
    "test": "turbo run test"
  },
  "devDependencies": {
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
